# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET           /                            controllers.HomeController.index
# An example controller showing how to use dependency injection
GET           /count                       controllers.CountController.count
# An example controller showing how to write asynchronous code
GET           /message                     controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                controllers.Assets.versioned(path="/public", file: Asset)

# TODO add regexes

GET           /user/:id/cart               controllers.Cart.get(id: Long)
POST          /user/:id/cart              controllers.Cart.add(id: Long)
PUT           /user/:id/cart              controllers.Cart.change(id: Long)

GET           /user/:userId/payment        controllers.Payments.get(userId: Long)
POST          /user/:userId/payment        controllers.Payments.pay(userId: Long)

GET           /items                       controllers.Items.all()
GET           /item/:id                    controllers.Items.get(id: Long)
POST          /item/:id                    controllers.Items.add(id: Long)
PUT           /item/:id                    controllers.Items.change(id: Long)
DELETE        /item/:id                    controllers.Items.remove(id: Long)

GET           /users                       controllers.Users.all()
GET           /user/:id                    controllers.Users.get(id: Long)
POST          /user/:id                    controllers.Users.add(id: Long)
PUT           /user/:id                    controllers.Users.change(id: Long)
DELETE        /user/:id                    controllers.Users.remove(id: Long)

GET           /orders                      controllers.Orders.all()
GET           /order/:id                   controllers.Orders.get(id: Long)
POST          /order/:id                   controllers.Orders.add(id: Long)
PUT           /order/:id                   controllers.Orders.change(id: Long)
DELETE        /order/:id                   controllers.Orders.remove(id: Long)
