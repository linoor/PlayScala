GET           /                            controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                controllers.Assets.versioned(path="/public", file: Asset)

# TODO add regexes
GET           /user/:id/cart/show          controllers.CartController.show(id: Long)
GET           /user/:id/cart               controllers.CartController.get(id: Long)
POST          /user/:id/cart              controllers.CartController.add(id: Long)
PUT           /user/:id/cart              controllers.CartController.change(id: Long)

GET           /user/:userId/payment        controllers.Payments.get(userId: Long)
POST          /user/:userId/payment        controllers.Payments.pay(userId: Long)

GET           /products                       controllers.Items.all()
GET           /product/:id                    controllers.Items.get(id: Long)
POST          /product/:id                    controllers.Items.add(id: Long)
PUT           /product/:id                    controllers.Items.change(id: Long)
DELETE        /product/:id                    controllers.Items.remove(id: Long)

GET           /users                       controllers.Users.all()
GET           /user/:id                    controllers.Users.get(id: Long)
POST          /user/:id                    controllers.Users.add(id: Long)
PUT           /user/:id                    controllers.Users.change(id: Long)
DELETE        /user/:id                    controllers.Users.remove(id: Long)

GET           /orders                      controllers.Orders.all()
GET           /order/:id                   controllers.Orders.get(id: Long)
POST          /order/:id                   controllers.Orders.add(id: Long)
PUT           /order/:id                   controllers.Orders.change(id: Long)
DELETE        /order/:id                   controllers.Orders.remove(id: Long)
